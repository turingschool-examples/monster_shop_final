<h1>Current Discounts</h1>
<%= link_to "Create New Discount", "/merchant/discounts/new" %>
<br></br>
<table class = "discount-table">
  <tr>
    <th></th>
    <th>Discount ID</th>
    <th>Percentage Off</th>
    <th>Minimum Item Quantity</th>
  </tr>
  <% @discounts.each do |discount| %>
    <tr id = "discount-row-<%=discount.id%>">
      <td><%= link_to "Delete", merchant_discount_path(id: discount.id), method: :delete, data: { confirm: "Are you sure you want to delete the discount with ID: #{discount.id}?" }%>
      <td><%= link_to "Edit", edit_merchant_discount_path(id: discount.id) %>
      <td><%= discount.id %></td>
      <td><%= discount.percent %>%</td>
      <td><%= discount.quantity_required %></td>
    </tr>
  <% end %>
</table>
