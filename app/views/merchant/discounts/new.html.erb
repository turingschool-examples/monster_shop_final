<%= form_tag '/merchant/discounts', method: :post do %>

  <%= label_tag :name %>
  <%= text_field_tag :name %>

  <%= label_tag :percentage %>
  <%= number_field_tag :percentage, input_html: { step: 0.0 } %>

  <%= label_tag :limit %>
  <%= number_field_tag :limit %>

  <%= submit_tag "Create Discount" %>
<% end %>
